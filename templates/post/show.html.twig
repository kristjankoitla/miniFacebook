{% extends('base.html.twig') %}

{% block body %}
    <div class="section">
        <div class="container is-max-desktop">
            <div class="card">
                {% if post.image %}
                    <div class="card-image">
                        <figure class="image">
                            <img src="{{ imgSrc ~ '/uploads/' ~ post.image }}" alt="Placeholder image">
                        </figure>
                    </div>
                {% endif %}
                <div class="card-content">
                    <div class="media">
                        <div class="media-left">
                            <figure class="image is-96x96">
                                {% if post.user.image %}
                                    <img src="{{ imgSrc ~ '/uploads/' ~ post.user.image }}" alt="Placeholder image">
                                {% else %}
                                    <img src="https://reactnativecode.com/wp-content/uploads/2018/02/Default_Image_Thumbnail.png" alt="Send help">
                                {% endif %}
                            </figure>
                        </div>
                        <div class="media-content">
                            <p class="title is-3">{{ post.user.firstName }} {{ post.user.lastName }}</p>
                            <p class="subtitle is-5">{{ post.user.city }}</p>
                        </div>
                        <div class="media-right">
{#                            <button class="delete"></button>#}
                            {{ form(likeForm) }}
                        </div>
                    </div>

                    <div class="content">
                        {{ post.text }}
                        {#            <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>#}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section">
        <div class="container is-max-desktop">
            <div class="box">
                <div class="mb-6">
                    {{ form(commentForm) }}
                </div>
                {% for comment in comments %}
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-64x64">
                                {% if comment.user.image %}
                                    <img src="{{ imgSrc ~ '/uploads/' ~ comment.user.image }}" alt="Ich bin God">
                                {% else %}
                                    <img src="https://reactnativecode.com/wp-content/uploads/2018/02/Default_Image_Thumbnail.png" alt="Contact Coke">
                                {% endif %}
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <strong>{{ comment.user.firstName }} {{ comment.user.lastName }}</strong> <small>{{ comment.user.city }}</small>
                                    <br>
                                    {{ comment.text }}
                                </p>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}